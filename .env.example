# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Worker Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_POOL=prefork
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Task Configuration
CELERY_TASK_SOFT_TIME_LIMIT=3600
CELERY_TASK_TIME_LIMIT=3900
CELERY_TASK_ACKS_LATE=True

# Rate Limiting
CELERY_DEFAULT_RATE_LIMIT=100/m

# Monitoring
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:password

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/celery/celery.log

# OSINT Application Settings
OSINT_MAX_CONCURRENT_SCANS=10
OSINT_SCAN_TIMEOUT=300
OSINT_ENABLE_CACHING=True
OSINT_CACHE_TTL=3600

# API Keys (if needed)
# VIRUSTOTAL_API_KEY=your_key_here
# SHODAN_API_KEY=your_key_here
# ABUSEIPDB_API_KEY=your_key_here
