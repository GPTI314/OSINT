# Application Settings
APP_NAME=OSINT Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
API_PREFIX=/api/v1

# Security Settings
SECRET_KEY=your-secret-key-min-32-characters-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
API_KEY_EXPIRE_DAYS=365

# Encryption Keys (AES-256)
ENCRYPTION_KEY=your-encryption-key-32-bytes-base64-encoded
DATA_ENCRYPTION_KEY=your-data-encryption-key-32-bytes-base64

# Database
DATABASE_URL=postgresql+asyncpg://osint_user:osint_password@localhost:5432/osint_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (Sessions & Rate Limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=0
REDIS_CACHE_DB=1
SESSION_EXPIRE_SECONDS=3600

# OAuth2 Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/osint.log
AUDIT_LOG_FILE=logs/audit.log
LOG_ROTATION=midnight
LOG_RETENTION_DAYS=90

# Data Retention
DATA_RETENTION_DAYS=365
PII_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=730

# Ethical Scraping
RESPECT_ROBOTS_TXT=True
DEFAULT_CRAWL_DELAY=1.0
MAX_REQUESTS_PER_DOMAIN=100
USER_AGENT=OSINTBot/1.0 (Ethical Research; +https://your-domain.com/bot)

# Security Headers
ENABLE_HSTS=True
HSTS_MAX_AGE=31536000
ENABLE_CSP=True
CSP_POLICY=default-src 'self'

# Password Policy
MIN_PASSWORD_LENGTH=12
REQUIRE_UPPERCASE=True
REQUIRE_LOWERCASE=True
REQUIRE_DIGITS=True
REQUIRE_SPECIAL_CHARS=True
PASSWORD_HISTORY_COUNT=5

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
REQUIRE_EMAIL_VERIFICATION=True
ENABLE_2FA=True

# PII Protection
ENABLE_PII_ENCRYPTION=True
ENABLE_PII_MASKING=True
PII_FIELDS=email,phone,ssn,passport,credit_card

# Compliance
GDPR_ENABLED=True
CCPA_ENABLED=True
DATA_EXPORT_FORMAT=json
