# OSINT Intelligence Platform - Environment Configuration

# Application
APP_NAME="OSINT Intelligence Platform"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=osint_platform
POSTGRES_USER=osint_user
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL="postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# Database - MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=osint_platform
MONGO_USER=osint_user
MONGO_PASSWORD=change_me_in_production
MONGODB_URL="mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DB}"

# Database - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=change_me_in_production
REDIS_URL="redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}"

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL="http://${ELASTICSEARCH_HOST}:${ELASTICSEARCH_PORT}"

# Celery
CELERY_BROKER_URL="${REDIS_URL}"
CELERY_RESULT_BACKEND="${REDIS_URL}"
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000

# Security
SECRET_KEY="change_this_to_a_random_secret_key_in_production"
JWT_SECRET_KEY="change_this_to_a_random_jwt_secret_in_production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY="change_this_to_a_32_byte_key_in_production"

# OAuth2 (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# API Keys - Third Party Services
SHODAN_API_KEY=""
CENSYS_API_ID=""
CENSYS_API_SECRET=""
VIRUSTOTAL_API_KEY=""
IPINFO_API_KEY=""
HUNTER_IO_API_KEY=""
CLEARBIT_API_KEY=""
FULL_CONTACT_API_KEY=""

# Scraping Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=5
USER_AGENT_ROTATION=true
PROXY_ROTATION=true

# Proxy Configuration
PROXY_ENABLED=false
PROXY_LIST_URL=""
HTTP_PROXY=""
HTTPS_PROXY=""
SOCKS_PROXY=""

# CAPTCHA Solving
CAPTCHA_SOLVER="2captcha"
CAPTCHA_API_KEY=""

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# Logging
LOG_FORMAT="json"
LOG_FILE_ENABLED=true
LOG_FILE_PATH="./logs/osint-platform.log"
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# ELK Stack
ELK_ENABLED=false
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000
KIBANA_URL="http://localhost:5601"

# Sentry (Error Tracking)
SENTRY_ENABLED=false
SENTRY_DSN=""

# Feature Flags
FEATURE_SOCIAL_INTELLIGENCE=true
FEATURE_IMAGE_INTELLIGENCE=true
FEATURE_THREAT_INTELLIGENCE=true
FEATURE_DARK_WEB_MONITORING=false
FEATURE_REAL_TIME_ALERTS=true

# Storage
STORAGE_TYPE="local"
STORAGE_PATH="./storage"
S3_BUCKET=""
S3_REGION=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""

# Email Notifications
EMAIL_ENABLED=false
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH="/ws"

# Performance
MAX_WORKERS=4
WORKER_CLASS="uvicorn.workers.UvicornWorker"
WORKER_CONNECTIONS=1000
KEEPALIVE=5

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
