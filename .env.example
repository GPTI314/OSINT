# OSINT Toolkit Configuration
# Copy this file to .env and update with your values

# General Settings
PROJECT_NAME="OSINT Toolkit"
DEBUG=false

# Proxy Configuration
PROXY__ENABLED=false
PROXY__ROTATION=true
PROXY__TEST_URL="http://httpbin.org/ip"
PROXY__MAX_FAILURES=3
# PROXY__PROXIES=["http://proxy1:8080", "http://proxy2:8080"]

# User-Agent Configuration
USER_AGENT__ROTATION=true
USER_AGENT__BROWSER_TYPE="random"
USER_AGENT__DEVICE_TYPE="desktop"

# Rate Limiting
RATE_LIMIT__ENABLED=true
RATE_LIMIT__REQUESTS_PER_SECOND=1.0
RATE_LIMIT__ADAPTIVE=false

# CAPTCHA Solving
CAPTCHA__ENABLED=false
CAPTCHA__SERVICE="2captcha"
CAPTCHA__API_KEY=""
CAPTCHA__TIMEOUT=120

# Logging
LOGGING__LEVEL="INFO"
LOGGING__COLORIZE=true
LOGGING__LOG_FILE="logs/osint.log"

# HTML Scraper
HTML_SCRAPER__TIMEOUT=30
HTML_SCRAPER__MAX_RETRIES=3
HTML_SCRAPER__VERIFY_SSL=true
HTML_SCRAPER__PARSER="lxml"

# JavaScript Scraper
JS_SCRAPER__BROWSER_TYPE="chromium"
JS_SCRAPER__HEADLESS=true
JS_SCRAPER__VIEWPORT_WIDTH=1920
JS_SCRAPER__VIEWPORT_HEIGHT=1080

# API Scraper
# API_SCRAPER__BASE_URL=""
# API_SCRAPER__API_KEY=""
# API_SCRAPER__BEARER_TOKEN=""

# File Downloader
FILE_DOWNLOADER__DOWNLOAD_DIR="./downloads"
FILE_DOWNLOADER__CHUNK_SIZE=8192
FILE_DOWNLOADER__VERIFY_MIME_TYPE=true

# Image Scraper
IMAGE_SCRAPER__DOWNLOAD_DIR="./images"
IMAGE_SCRAPER__AUTO_CONVERT=false
IMAGE_SCRAPER__TARGET_FORMAT="PNG"
