# ============================================================================
# OSINT Platform - Database Environment Variables
# ============================================================================
# Copy this file to .env and update the values for your environment
# ============================================================================

# PostgreSQL Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=osint_platform
POSTGRES_USER=osint_user

# MongoDB Configuration
MONGO_PASSWORD=your_secure_mongo_password
MONGO_INITDB_DATABASE=osint_platform

# Elasticsearch Configuration
ELASTIC_PASSWORD=your_secure_elastic_password

# Kibana Configuration (if using)
KIBANA_SYSTEM_PASSWORD=your_secure_kibana_password

# pgAdmin Configuration (if using)
PGADMIN_EMAIL=admin@osint.local
PGADMIN_PASSWORD=your_secure_pgadmin_password

# Mongo Express Configuration (if using)
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=your_secure_mongoexpress_password

# Redis Configuration (if using)
REDIS_PASSWORD=your_secure_redis_password

# ============================================================================
# Application Database Connection Strings
# ============================================================================

# PostgreSQL
DATABASE_URL=postgresql://osint_user:your_secure_postgres_password@localhost:5432/osint_platform

# MongoDB
MONGODB_URI=mongodb://admin:your_secure_mongo_password@localhost:27017/osint_platform?authSource=admin

# Elasticsearch
ELASTICSEARCH_URL=http://elastic:your_secure_elastic_password@localhost:9200

# Redis
REDIS_URL=redis://:your_secure_redis_password@localhost:6379

# ============================================================================
# Development vs Production
# ============================================================================

# Set to 'development' or 'production'
NODE_ENV=development

# Load seed data on startup (development only!)
LOAD_SEED_DATA=false
