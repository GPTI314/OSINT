{{ define "email.default.html" }}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }
        .alert {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 15px;
            margin: 10px 0;
        }
        .critical {
            background-color: #fee;
            border-color: #f00;
        }
        .warning {
            background-color: #ffeaa7;
            border-color: #fdcb6e;
        }
        .resolved {
            background-color: #d4edda;
            border-color: #28a745;
        }
        .header {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .details {
            margin: 5px 0;
        }
        .label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h2>OSINT Toolkit Alert</h2>

    {{ range .Alerts }}
    <div class="alert {{ if eq .Status "resolved" }}resolved{{ else }}{{ .Labels.severity }}{{ end }}">
        <div class="header">
            {{ if eq .Status "resolved" }}✓ RESOLVED{{ else }}⚠ FIRING{{ end }}: {{ .Labels.alertname }}
        </div>

        <div class="details">
            <span class="label">Severity:</span> {{ .Labels.severity }}
        </div>

        <div class="details">
            <span class="label">Component:</span> {{ .Labels.component }}
        </div>

        {{ if .Annotations.summary }}
        <div class="details">
            <span class="label">Summary:</span> {{ .Annotations.summary }}
        </div>
        {{ end }}

        {{ if .Annotations.description }}
        <div class="details">
            <span class="label">Description:</span> {{ .Annotations.description }}
        </div>
        {{ end }}

        <div class="details">
            <span class="label">Started at:</span> {{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}
        </div>

        {{ if eq .Status "resolved" }}
        <div class="details">
            <span class="label">Ended at:</span> {{ .EndsAt.Format "2006-01-02 15:04:05 MST" }}
        </div>
        {{ end }}
    </div>
    {{ end }}

    <hr>
    <p><small>OSINT Toolkit Monitoring System</small></p>
</body>
</html>
{{ end }}
