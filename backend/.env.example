# Application Settings
APP_NAME=OSINT Intelligence Platform
APP_VERSION=1.0.0
ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=osint_db
POSTGRES_USER=osint_user
POSTGRES_PASSWORD=change_this_password

# Database - MongoDB
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=osint_mongo
MONGO_USER=osint_user
MONGO_PASSWORD=change_this_password

# Database - Elasticsearch
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=change_this_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=change_this_password

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=osint_user
RABBITMQ_PASSWORD=change_this_password
RABBITMQ_VHOST=/

# Celery
CELERY_BROKER_URL=amqp://osint_user:change_this_password@rabbitmq:5672/
CELERY_RESULT_BACKEND=redis://redis:6379/1

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OSINT API Keys (Optional - for enhanced features)
SHODAN_API_KEY=
CENSYS_API_ID=
CENSYS_API_SECRET=
VIRUSTOTAL_API_KEY=
HUNTER_IO_API_KEY=
CLEARBIT_API_KEY=
FULLCONTACT_API_KEY=
PIPL_API_KEY=

# Social Media APIs
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=OSINT-Platform/1.0

# MaxMind GeoIP
MAXMIND_LICENSE_KEY=
GEOIP_DB_PATH=/app/data/geoip

# Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_DELAY=1
CONCURRENT_REQUESTS=16
DOWNLOAD_TIMEOUT=30
RETRY_TIMES=3

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,txt,csv,json

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/osint.log

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Email Notifications (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@osint-platform.local

# Webhook Notifications
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
